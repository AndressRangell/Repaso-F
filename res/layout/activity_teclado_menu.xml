<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="5dp"
    tools:context="com.flota.menus.TecladoSiempreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgVLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btnMenu"
                android:src="@drawable/redinfonet" />
            <Button
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClick"
                android:background="@drawable/bg_button_mpos_blue"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:weightSum="10">

                <RelativeLayout
                    android:id="@+id/relative01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:id="@+id/tvTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_horizontal"
                        android:text="Monto:"
                        android:textColor="@android:color/white"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTitulo"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:autoSizeMaxTextSize="32sp"
                        android:background="@drawable/border_number"
                        android:gravity="right"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="5dp"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/colorbuttonnumber"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorbuttonnumber"
                    />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="4">

                    <android.support.v7.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        app:columnCount="4"
                        app:orientation="horizontal"
                        app:rowCount="4"

                        >

                        <Button
                            android:id="@+id/number7"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="7"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="0"
                            app:layout_columnWeight="1"
                            app:layout_row="2"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number8"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="8"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="2"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number9"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="9"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="2"
                            app:layout_columnWeight="1"
                            app:layout_row="2"
                            app:layout_rowWeight="1" />

                        <ImageButton
                            android:id="@+id/numberDelete"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:contentDescription="TODO"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:src="@drawable/borrar_caracter"
                            app:layout_column="3"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number4"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="4"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="0"
                            app:layout_columnWeight="1"
                            app:layout_row="1"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number5"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="5"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="1"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number6"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="6"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="2"
                            app:layout_columnWeight="1"
                            app:layout_row="1"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/numberAC"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="AC"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="3"
                            app:layout_columnWeight="1"
                            app:layout_row="1"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number1"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="0"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number2"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="1"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number3"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="3"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="2"
                            app:layout_columnWeight="1"
                            app:layout_row="0"
                            app:layout_rowWeight="1" />

                        <Button
                            android:id="@+id/number0"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            app:layout_column="0"
                            app:layout_columnSpan="3"
                            app:layout_columnWeight="1"
                            app:layout_row="3"
                            app:layout_rowWeight="1" />

                        <ImageButton
                            android:id="@+id/numberDone"
                            android:layout_width="@dimen/buttonx"
                            android:layout_height="@dimen/buttony"
                            android:layout_margin="@dimen/buttonMargin"
                            android:background="@drawable/btn_blue_stroke"
                            android:contentDescription="TODO"
                            android:gravity="center"
                            android:src="@drawable/ic_done"
                            app:layout_column="3"
                            app:layout_columnWeight="1"
                            app:layout_row="2"
                            app:layout_rowSpan="2"
                            app:layout_rowWeight="1" />

                    </android.support.v7.widget.GridLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>