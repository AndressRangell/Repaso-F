<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86222222">

    <LinearLayout
        android:id="@+id/setting_pass_layout"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/setting_pass_close"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_close_white"
                    android:tint="@color/colorAzul174B" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/edittext_selector"
                    android:layout_marginStart="45dp"
                    android:hint="ContraseÃ±a del Tecnico"
                    android:padding="6dp"
                    android:textSize="15sp"
                    android:inputType="numberPassword"
                    android:maxLength="25"
                    />

                <ImageButton
                    android:id="@+id/btnAceptar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_candado"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_circle_bg" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="46dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_passw_icon" />

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>