<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativeTeclado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#003366"
        android:padding="6dp">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            app:columnCount="4"
            app:orientation="horizontal"
            app:rowCount="4">

            <Button
                android:id="@+id/number7"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number8"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number9"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/numberDelete"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke"
                android:contentDescription="TODO"
                android:gravity="center"
                android:onClick="onClick"
                android:src="@drawable/borrar_caracter"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number4"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number5"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number6"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke"
                android:src="@drawable/ic_close_red"
                android:gravity="center"
                android:onClick="onClick"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number1"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number2"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number3"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />


            <Button
                android:id="@+id/number0"

                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/number000"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:background="@drawable/btn_blue_stroke_blue"
                android:gravity="center"
                android:onClick="onClick"
                android:text="000"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/btnOk"
                android:layout_width="@dimen/buttonx"
                android:layout_height="@dimen/buttony"
                android:layout_margin="@dimen/buttonMargin"
                android:contentDescription="TODO"
                android:background="@drawable/btn_blue_stroke"
                android:onClick="onClick"
                android:gravity="center"
                android:textAlignment="center"
                android:src="@drawable/ic_enter"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowSpan="2"
                app:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>
    </RelativeLayout>

</LinearLayout>