<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.flota.PermissionActivity">

    <ImageView
        android:id="@+id/imgPermisos"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_result_success"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvPermisos"
        android:layout_below="@+id/imgPermisos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:text="Permisos Activados"
        android:textSize="20dp"
        android:textColor="@color/white"/>

</RelativeLayout>